<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            {{> _sidebar}}
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header">
                    Edit Journal
                </div>
                <div class="card-body">
                    <form action="/journals/edit/{{journal.id}}?_method=PATCH" method="post">
                        <input type="hidden" name="_method" value="PATCH">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" name="title" value="{{journal.title}}">
                        </div>
                        <div class="form-group">
                            <label>Status</label>
                            <select name="status" class="form-control">
                                {{#select journal.status}}
                                <option value="public" selected>Public</option>
                                <option value="private">Private</option>
                                {{/select}}
                            </select>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" name="allowComments" class="form-check-input" {{#if journal.allowComments}} checked="checked" {{/if}}>
                            <label class="form-check-label">Allow Comments</label>
                        </div>
                        <div class="form-group">
                            <label>Tell us something</label>
                            <textarea class="form-control" name="body">{{journal.body}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle mr-1"></i> Submit</button>
                        <a href="/dashboard" class="btn btn-warning text-light">
                            <i class="fas fa-times-circle"></i> Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('body', {
            plugins: 'wysiwygarea,toolbar,basicstyles,link'
        });
    </script>
</div>