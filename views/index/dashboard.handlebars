<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            {{> _sidebar}}
        </div>
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header">
                    Welcome, {{user.firstName}}!
                </div>
                <div class="card-body">
                    {{#if journals}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each journals}}
                            <tr>
                                <td class="text-capitalize align-middle">
                                    <a href="/journals/show/{{id}}" class="text-dark">{{title}}</a>
                                </td>
                                <td class="text-capitalize align-middle">{{status}}</td>
                                <td>
                                    <a href="/journals/show/{{id}}" class="btn btn-success btn-sm float-left mr-1">
                                        <i class="fas fa-glasses mr-1"></i>Show</a>
                                    <a href="/journals/edit/{{id}}" class="btn btn-info btn-sm float-left mr-1">
                                        <i class="fas fa-pencil-alt mr-1"></i>Edit</a>

                                    <form action="/journals/delete/{{id}}?_method=DELETE" method="post" class="float-left">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash-alt mr-1"></i>Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    {{else}}
                    <div class="text-center">
                        <p>No stories created yet</p>
                        <a href="/journals/add" class="btn btn-success btn-lg text-capitalize">Write one now</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>